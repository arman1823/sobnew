extends layout

block content

    .row
        .col-md-4.col-md-offset-4.well
            legend Your Token
                form(action="/emergency-console/process-token?uri=#{uri}", method="POST")
                    .form-group
                        label(for="token") Token
                        input#token.form-control(type="text", name="token", placeholder="token", tabindex="1")
                    input.btn.btn-primary.btn-block(type="submit", value="Submit", tabindex="2")
