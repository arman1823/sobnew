@import "normalize.css"
@import 'nib'
@import "type-utils"

base-font-size = 62.5%

@font-face
  font-family 'arian_amuregular'
  src url(asset_path('arnamu-webfont.eot'))
  src url(asset_path('arnamu-webfont.eot')) format('embedded-opentype'), url(asset_path('arnamu-webfont.woff')) format('woff'), url(asset_path('arnamu-webfont.ttf')) format('truetype');
  font-weight normal
  font-style normal

*
  -webkit-tap-highlight-color rgba(255, 255, 255, 0)
  -webkit-tap-highlight-color transparent
  -webkit-touch-callout none

html[lang=en]
  font-family 'Quicksand', sans-serif

html[lang=hy]
  font-family 'arian_amuregular'

body
  background url(asset_path('phone-background.png')) white no-repeat top right

.clearfix
  clearfix()

header
  height 160px
  position relative

.logo
  position absolute
  top 23px
  left 41px
  display block
  width 119px
  height 107px
  background-image url(asset_path('phone-logo.png'))
  background-repeat no-repeat
  background-size 119px 107px

.menu-button
  position absolute
  top 0
  left 0
  display block
  width 33px
  height 33px
  background-image url(asset_path('phone-menu-icon.png'))
  background-repeat no-repeat
  background-size 33px 33px
  background-position center center

.menu-layer
  position absolute
  width 100%
  top 82px
  left 0
  z-index 10
  display none

.sub-after
  height 15px
  margin-bottom -15px
  display none
  background-position 0 -30px

.expanded .sub-after
  display block

.expanded > a
  color white !important

.menu
  margin 0
  padding 0

.menu li
  list-style none
  text-transform uppercase

.menu-bg
  background-repeat no-repeat
  background-position 0 0

.menu-bg-active > a
  color white !important

.menu-1
  background-image url(asset_path('phone-menu-normal-state-01.svg'))

.menu-1:active, .menu-1.expanded, .menu-1 .sub-menu, .menu-1 .sub-menu li, .menu-1 .sub-after
  background-image url(asset_path('phone-menu-clicked-state-01.svg'))

.menu-2
  background-image url(asset_path('phone-menu-normal-state-02.svg'))
  margin-top -12px

.menu-2:active, .menu-2.expanded, .menu-2 .sub-menu, .menu-2 .sub-menu li, .menu-2 .sub-after
  background-image url(asset_path('phone-menu-clicked-state-02.svg'))

.menu-3
  background-image url(asset_path('phone-menu-normal-state-03.svg'))
  margin-top -12px

.menu-3:active
  background-image url(asset_path('phone-menu-clicked-state-03.svg'))

.menu-4
  background-image url(asset_path('phone-menu-normal-state-04.svg'))
  margin-top -12px

.menu-4:active, .menu-4.expanded, .menu-4 .sub-menu, .menu-4 .sub-menu li, .menu-4 .sub-after
  background-image url(asset_path('phone-menu-clicked-state-04.svg'))

.menu-5
  background-image url(asset_path('phone-menu-normal-state-05.svg'))
  margin-top -12px

.menu-5:active
  background-image url(asset_path('phone-menu-clicked-state-05.svg'))

.menu-6
  background-image url(asset_path('phone-menu-normal-state-06.svg'))
  margin-top -12px
  color #2E0621

.menu-6:active, .menu-6.expanded, .menu-6 .sub-menu, .menu-6 .sub-menu li, .menu-6 .sub-after
  background-image url(asset_path('phone-menu-clicked-state-06.svg'))

.menu-6.expanded a
  color #2E0621 !important

.menu-7
  background-image url(asset_path('phone-menu-normal-state-07.svg'))
  margin-top -13px

.menu-7:active
  background-image url(asset_path('phone-menu-clicked-state-07.svg'))

.menu-bg a
  background-position 0 -1px

.menu li a
  display block
  text-decoration none
  color #56314A
  padding 0 0 0 75px
  font-weight normal
  font-size 20px
  margin-bottom -10px

.sub-menu
  display none
  padding 10px 0 0 0
  background-position 0 -30px

.sub-menu li
  background-position 0 -30px

.sub-menu li a
  display block
  margin 0
  text-transform none

.sub-menu li a.enabled
  color white

.visit-link
  display inline-block
  width 33px
  height 33px
  background-image url(asset_path('phone-social-icons.png'))
  background-size 129px 65px
  background-position 0 0

.instagram-link
  display inline-block
  width 33px
  height 33px
  background-image url(asset_path('phone-social-icons.png'))
  background-size 129px 65px
  background-position -33px 0

.twitter-link
