.language-bar-container.active .language-bar
  display block

.language-bar-container.active span
  color #C5168C

.language-bar
  position absolute
  margin 0
  padding 0
  display none

.language-bar li
  display inline-block
  width 32px
  height 31px
  line-height 32px
  text-align center
  background #D3D8E5

.language-bar li a
  color #C5168C
  text-decoration none

.index-box, .shop-box
  display block
  position relative
  margin-bottom 20px
  overflow hidden

.index-box img
  width 100%
  height 100%

.index-box a
  text-decoration none !important

.index-box
  text-decoration none !important

#entertain-page img
  margin-bottom 20px

.shop-brand
  float left
  text-align center
  line-height 120px
  position relative
  overflow hidden

.shop-brand img
  background white
  position absolute
  top 0shop
  left 0
  opacity 0
  transition opacity .1s ease-in-out

.levels-box
  margin-bottom 20px

.brand-map-level
  position relative !important
  float left !important
  width 100%
  margin 0 0 0 0

.brand-map-level h3
  text-align right
  font-size 18px
  line-height 20px

.brand-level
  position absolute
  width 90%
  height 20px
  color #B0B0B1
  top 0
  left 0
  margin-left 200

.brand-image, .event-image
  top 0
  left 0
  width 100%

#brand-page img
  margin-top 0px !important
  margin-bottom 16px !important

.shop-brand-placeholder
  float left

.brand-text p a, .event-text p a, .section-text p a, .how-box p a
  text-decoration none
  color #EC008B

.shop-brand span
  line-height 20px
  text-transform uppercase
  font-size 20px
  color white
  display inline-block
  vertical-align middle
  opacity 1
  transition opacity .1s ease-in-out

.box-label
  position absolute
  bottom 20px
  left 0
  background-repeat no-repeat
  background-size 100% 100%

.box-label-color-0
