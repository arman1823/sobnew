.button-panel
  position absolute
  top 0
  right 0
  margin 0
  padding 0

.button-panel li
  float left
  list-style none
  line-height 0

.language-bar-container
  position relative

.language-bar-container span
  display inline-block
  width 32px
  height 32px
  line-height 32px
  text-align center
  color #FCBB75
  cursor default

html[lang=en] .language-bar-container span
  font-family 'Quicksand', sans-serif
  font-size 16px !important

html[lang=hy] .language-bar-container li
  font-family 'Quicksand', sans-serif
  font-size 16px !important

